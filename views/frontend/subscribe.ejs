<section class="subscribe_section" style="padding: 50px 0; background: linear-gradient(135deg, #4b0082, #ff1493);">
    <div class="container-fuild" style="max-width: 1200px; margin: 0 auto; padding: 0 15px;">
       <div class="box" style="background: rgba(255, 255, 255, 0.1); border-radius: 15px; padding: 30px; box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);">
          <div class="row" style="display: flex; flex-wrap: wrap;">
             <div class="col-md-6 offset-md-3" style="flex: 0 0 50%; max-width: 50%; margin: 0 auto;">
                <div class="subscribe_form" style="text-align: center;">
                   <div class="heading_container heading_center" style="margin-bottom: 20px;">
                      <h3 style="font-size: 28px; color: #fff; font-weight: bold; text-transform: uppercase; letter-spacing: 1px;">
                         Đăng ký nhận ưu đãi giảm giá
                      </h3>
                   </div>
                   <p style="color: #fff; opacity: 0.8; font-size: 16px; margin-bottom: 25px;">
                      Nhập email của bạn để nhận thông tin khuyến mãi và ưu đãi mới nhất từ chúng tôi!
                   </p>
                   <form action="" style="display: flex; flex-direction: column; gap: 15px; align-items: center;">
                      <input 
                         type="email" 
                         placeholder="Nhập email của bạn" 
                         style="width: 100%; padding: 12px; border-radius: 8px; border: 1px solid rgba(255, 255, 255, 0.3); background: rgba(255, 255, 255, 0.2); color: #fff; font-size: 16px; outline: none; transition: all 0.3s;"
                         onfocus="this.style.borderColor='#fff'; this.style.background='rgba(255, 255, 255, 0.3)'"
                         onblur="this.style.borderColor='rgba(255, 255, 255, 0.3)'; this.style.background='rgba(255, 255, 255, 0.2)'"
                      >
                      <button style="padding: 12px 30px; background: #fff; color: #4b0082; font-size: 16px; font-weight: bold; border: none; border-radius: 8px; cursor: pointer; transition: all 0.3s; transform: scale(1);"
                              onmouseover="this.style.background='#f0f0f0'; this.style.transform='scale(1.05)'"
                              onmouseout="this.style.background='#fff'; this.style.transform='scale(1)'">
                         Đăng ký
                      </button>
                   </form>
                </div>
             </div>
          </div>
       </div>
    </div>
</section>