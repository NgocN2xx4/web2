<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <%- include('css') %>
    <% path='user'%>
    <style>
        .div_center {
          text-align: center;
          padding-top: 40px;
        }
      </style>
</head>

<body>
    <div class="container-scroller">
    <!-- partial:partials/_sidebar.html -->
    <%- include('siderbar') %>
    <!-- partial -->
    <%- include('header') %>
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="div_center">
                <h1>Thêm người dùng mới</h1>
            </div>
            <% if (message) { %>
                <div class="alert alert-<%= message.type %>">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
                    <%= message.content %>
                </div>
            <% } %>
            <div class="row">
                <div class="col-md-10">
                    <form action="<%= item._id ? '/user/edit/' + item._id : '/user/add'%>" method="post" id="userForm">
                        <div class="form-group">
                            <label>Tên đầy đủ: </label>
                            <input type="text" name="name" class="form-control" required value="<%= item.name%>">
                        </div>
                        <div class="form-group">
                            <label>Email: </label>
                            <input type="email" name="email" class="form-control" required value="<%= item.email%>">
                        </div>
                        <div class="form-group">
                            <label>Số điện thoại: </label>
                            <input type="tel" name="phone" class="form-control" value="<%= item.phone%>">
                        </div>
                        <div class="form-group">
                            <label>Địa chỉ: </label>
                            <input type="text" name="address" class="form-control" value="<%= item.address%>">
                        </div>
                        <div class="form-group">
                            <label>Mật khẩu: </label>
                            <input type="password" name="password" class="form-control" id="password" min="8" <%if(item._id != '') {%> '' <%} else{%>required="true"<%}%> >
                        </div>
                        <div class="form-group">
                            <label>Xác nhận mật khẩu: </label>
                            <input type="password" name="password_confirm" class="form-control" id="password-confirm" min="8" <%if(item._id !='') {%> '' <%} else{%>required="true"<%}%>>
                        </div>
                        <div class="form-group">
                            <label>Vai trò: </label>
                            <select class="form-control" required name="usertype" style="color:#fff;">
                                <%if(item.usertype === 'Admin'){%>
                                    <option >User</option>
                                    <option selected>Admin</option>
                                <% } else if(item.usertype === 'User') {%>
                                    <option selected>User</option>
                                    <option>Admin</option>
                                <%} else{%>
                                    <option selected>-- Select Role --</option> 
                                    <option>User</option>
                                    <option>Admin</option>
                                <%}%>

                            </select>
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-info btnSave" value="Lưu người dùng">
                            <a href="/user">Quay lại danh sách</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- End body -->
    <%- include('script') %>
    <!-- End custom js for this page -->

    </div>
</body>

</html>